.promo-cards
	position relative
	z-index 0
	width $promoCardWidth + $promoCardOffset * 8
	font-size $promoCardFontSize

	+below($desktop)
		font-size $promoCardTabletFontSize

	+below($tablet)
		width $promoCardWidth
		height $promoCardHeight + $promoCardMobileOffset * 8
		font-size $promoCardMobileFontSize

	+below($mobile)
		font-size $promoCardSmallMobilesFontSize

	&__item
		&:not(:first-child)
			position absolute
			top 0
			z-index 0

			&:hover
				z-index 1

		for num in (1..9)
			&[data-index=\'{num}\']
				z-index num * -1
				left $promoCardOffset * num

				+below($tablet)
					left 0
					top $promoCardMobileOffset * num
