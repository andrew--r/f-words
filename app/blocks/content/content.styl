$maxContentWidth = 1200px

.content
	max-width $maxContentWidth
	padding-top 17px

	&__row
		display flex
		padding-bottom 44px

		+below($desktop)
			display block
			padding-bottom 22px

	&__col
		flex-shrink 0
		flex-grow 0
		padding-right 26px

		+below($desktop)
			width 100%
			padding-bottom 22px

		&--1-2
			width 50%

		&--1-4
			width 25%

	&__h3
		font-weight 700

	p
		&:not(:last-child)
			margin-bottom 8px

		&.content__h3
			margin-bottom 0

		& + ul
			margin-top -8px

	ul
		margin-bottom 32px
		list-style none

		li
			&:not(:last-child)
				margin-bottom 4px

