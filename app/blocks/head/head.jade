head
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1, minimal-ui')
	meta(http-equiv='X-UA-Compatible' content='IE=edge')

	meta(name='imagetoolbar' content='no')
	meta(name='msthemecompatible' content='no')
	meta(name='cleartype' content='on')
	meta(name='HandheldFriendly' content='True')
	meta(name='google' value='notranslate')

	link(rel='shortcut icon' type='image/png' href='assets/images/favicon.png')

	meta(name='description' content='Наклейки с феминитивами, чтобы ненавязчиво напомнить, что феминитивы — это важно, уважительно и по-русски.')
	
	meta(name='twitter:card' content='summary_large_image')
	meta(name='twitter:title' content='Феминитивы')
	meta(name='twitter:description' content='Наклейки на ноутбук, чтобы помочь использовать феминитивы тем, кто считает, что это правильно, и ненавязчиво провоцировать обсуждение с теми, кому интересно.')
	meta(name='twitter:image' content="assets/images/social.png")
	
	meta(property='og:title' content='Феминитивы')
	meta(property='og:description' content='Наклейки на ноутбук, чтобы помочь использовать феминитивы тем, кто считает, что это правильно, и ненавязчиво провоцировать обсуждение с теми, кому интересно.')
	meta(property='og:image' content="/social.png")
	meta(property='og:image:width' content='1024')
	meta(property='og:image:height' content='512')
	
	block head
	title= pageTitle || 'Заголовок страницы'
	
	link(href='assets/styles/main.min.css?t=' + timestamp rel='stylesheet')
